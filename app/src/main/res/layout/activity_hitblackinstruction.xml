<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dellpc.buttonmove.hitblackinstruction">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HitBlack"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="#000000"
        android:id="@+id/titlename"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:textSize="20dp"
    android:textColor="#000000"
    android:text="-> Click on the black box"
    android:id="@+id/i1"
    android:layout_below="@+id/titlename"
    android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="->Don't tap on white"
        android:id="@+id/i2"
        android:layout_below="@+id/i1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="-> Note that there is a countdown timer of 20 seconds"
        android:id="@+id/i3"
        android:layout_below="@+id/i2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="-> You can restart the timer by reaching the required score"
        android:id="@+id/i4"
        android:layout_below="@+id/i3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="-> Beat the highscore"
        android:id="@+id/i5"
        android:layout_below="@+id/i4"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:textSize="60dp"
        android:textColor="#000000"
        android:text="Good Luck"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"/>

</RelativeLayout>
